<div class = "container-fluid">  
  <div class = "offset-lg-3 col-lg-6 col-md-8 offset-md-2 arrange-form blur-content">
  
    <h1 class = "form-title text-center">ログイン</h1>
    <div class = "form-zone">
      <!-- form_withのモデルのスコープがViewと異なるため、ScopeとURLを記述する必要あり -->
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
  
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, class: 'form-control' %>
  
        <%= f.label :パスワード %>
        <%= f.password_field :password, class: 'form-control' %>
  
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      <% end %>
      </div>
      <p class = "text-center">アカウントをお持ちでは無いですか？︎ <%= link_to  "会員登録", signup_path %></p>
    
  </div>
</div>