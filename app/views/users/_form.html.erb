    <%= form_with(model: @user, local: true) do |f| %>
    <!-- <form accept-charset="UTF-8" action="/users" class="new_user" id="new_user" method="post"> -->
    <!-- @userは新しいユーザーなので、Railsはpostメソッドを使ってフォームを構築する -->
    <!-- つまり /users (createアクション)に対してpostリクエストを送信する -->
      <%= render 'shared/error_messages', object: f.object %>
    
      <%= f.label :名前 %>
      <%= f.text_field :name, class: 'form-control' %>
      <!-- input id = "user_name" name = "user[name]" type = "text" -->
      <!-- Railsはnameの値を使って、初期化したハッシュをparams変数経由で構成する -->

      <%= f.label :メールアドレス %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :パスワード %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :パスワード確認用 %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      
      <%= f.label :image, "プロフィール画像を選択", class: "image_input_btn"%>
      <%= f.file_field :image, class: "image_form",accept: "image/jpeg,image/gif,image/png"%>


      <%= f.submit "送信", class: "btn btn-primary" %>
    <% end %>
    
    <script type="text/javascript">
      $("#user_image").bind("change", function() {
      var size_in_megabytes = this.files[0].size/1024/1024;
      if (size_in_megabytes > 5) {
        alert("アップロード出来る画像サイズは5MGまでです。");
        $("#user_image").val("");
      }
      });
    </script>