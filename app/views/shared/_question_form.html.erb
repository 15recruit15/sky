<%= form_with(model: @question, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div>
    <%= f.text_field :title, placeholder: "タイトルを入力" ,class:'mb-3 py-1' %>
    <%= f.text_area :content, size: "30x10",placeholder: "投稿内容を入力" %>
  </div>
  <div class = "form-zone">
    <%= f.label :image, "画像を選択", class: "image_input_btn"%>
    <%= f.file_field :image, class: "image_form",accept: "image/jpeg,image/gif,image/png"%>
    <%= f.submit "投稿する", class: "btn btn-primary"%>
  </div>
<% end %>

<script type="text/javascript">
  $("#question_image").bind("change", function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert("アップロード出来る画像サイズは5MGまでです。");
      $("#question_image").val("");
    }
  });
</script>