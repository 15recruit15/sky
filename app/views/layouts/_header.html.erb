<header>
  <nav class="navbar navbar-expand-lg navbar-dark justify-content-between" style= "background-color: #003366;">
    <%= link_to "Sky Quest",root_path, class: "navbar-brand" %>

    <div class="dropdown navbar-nav ml-auto mr-2">
      <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
        <i class="fas fa-search"></i>
      </button>
      <div class="dropdown-menu dropdown-menu-right p-0">
        <%= form_tag(search_path,:method => 'get',:class => "form-inline dropdown-item p-1 rounded") do %>
          <input name = "search" type="search" class="form-control mr-0" placeholder="キーワードを入力" aria-label="キーワードを入力">
          <button type="submit" class="btn btn-outline-primary ml-0">検索</button>
        <% end %>
      </div>
    </div>
    
    <ul class="navbar-nav">
        <% if logged_in? %>
          <li class="dropdown nav-item">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <% if current_user.image.attached? %>
                <%= image_tag current_user.image,:size => '40x40',class:  "header_image" %>
              <% else %>
                <%= image_tag '/default_image.jpg',:size => '40x40',class:  "header_image" %>
              <% end %>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "マイページ", current_user,class: "dropdown-item" %>
              <%= link_to "アカウント情報変更", edit_user_path(current_user),class: "dropdown-item" %>
              <%= link_to "記事を投稿", post_path,class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
              <%= link_to "ログアウト", logout_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class = "nav-item"><%= link_to "ログイン", login_path, class: "nav-link" %></li>
        <% end %>
    </ul>
  </nav>
</header>